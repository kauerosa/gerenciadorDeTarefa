<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- activity_relatorio.xml -->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RelatorioActivity">

        <TextView
            android:id="@+id/textViewConcluidas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tarefas ConcluÃ­das"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="16dp"/>

        <ListView
            android:id="@+id/listViewConcluidas"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_below="@id/textViewConcluidas"
            android:layout_margin="16dp"/>

        <TextView
            android:id="@+id/textViewIncompletas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tarefas Incompletas"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@id/listViewConcluidas"
            android:layout_margin="16dp"/>

        <ListView
            android:id="@+id/listViewIncompletas"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_below="@id/textViewIncompletas"
            android:layout_margin="16dp"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>